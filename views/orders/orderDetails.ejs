<%- include("../partials/header"); %> <%- include("../partials/navbar"); %>
<div class="mx-auto mt-5" style="width: 800px">
  <h1>Order Details</h1>
  <%- include("../partials/mainMessage") %>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>#</th>
        <th>Order ID</th>
        <th>Order Status</th>
      </tr>
    </thead>
    <tbody>
      <% orders.order_list.forEach(function(order, index) {%>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= order.order_sn %></td>
        <td><%= general.mapOrderStatus(order.order_status) %></td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>
<%- include("../partials/footer"); %>
